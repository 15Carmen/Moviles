<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#86D7FE">

    <LinearLayout
        android:id="@+id/jug2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnUnaCartaJug2"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#2192EF"
            android:rotation="180"
            android:text="Dame carta"
            android:textColor="#FAFBFC"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnPlantarseJug2"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#2193F0"
            android:rotation="180"
            android:text="Me planto"
            android:textColor="#EEE9E9"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/turnoJug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:hint="Turno del Jugador: X"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/puntosJugAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Puntos: "
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/puntosJug1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Puntos Jugador 1: "
            android:inputType="numberDecimal"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/puntosJug2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Puntos Jugador 2: "
            android:inputType="numberDecimal"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/jug1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/btnPlantarseJug1"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#2195F2"
            android:text="Me planto"
            android:textColor="#FEFEFE"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnUnaCartaJug1"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#2194F1"
            android:text="Dame carta"
            android:textColor="#F3EFEF"
            android:textSize="20sp" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>